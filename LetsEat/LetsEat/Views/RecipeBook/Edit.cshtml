@model LetsEat.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete @Model.Name?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind</button>
                <button type="button" id="delete" class="btn btn-danger">Yes</button>
            </div>
        </div>
    </div>
</div>

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<form asp-action="Edit" class="col-sm-9">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PrepMinutes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="PrepMinutes" class="form-control" />
            <span asp-validation-for="PrepMinutes" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CookMinutes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="CookMinutes" class="form-control" />
            <span asp-validation-for="CookMinutes" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Ingredients</label>
        @foreach (string i in Model.Ingredients)
        {
            <div class="col-sm-7">
                <input asp-for="@i" class="form-control" />
            </div>
        }
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Steps</label>
        @foreach (string s in Model.Steps)
        {
            <div class="col-sm-7">
                <input asp-for="@s" class="form-control" />
            </div>
        }
    </div>

    <div class="image-container">
        <label class="control-label">Images</label>
        @foreach (string il in Model.ImageLocations)
        {
            <div class="image">
                <img src="@il" />
            </div>
        }
    </div>

    <input type="hidden" asp-for="ID" id="recipe-id" />

    <div class="form-group row">
        <input type="submit" value="Save" class="btn btn-primary" />
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Delete</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/RecipeBook/Edit.js"></script>