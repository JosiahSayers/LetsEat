@model LetsEat.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrepMinutes" class="control-label"></label>
                <input asp-for="PrepMinutes" class="form-control" />
                <span asp-validation-for="PrepMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CookMinutes" class="control-label"></label>
                <input asp-for="CookMinutes" class="form-control" />
                <span asp-validation-for="CookMinutes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Ingredients</label>
                @foreach (string i in Model.Ingredients)
                {
                    <input asp-for="@i" class="form-control" />
                }
            </div>

            <div class="form-group">
                <label class="control-label">Steps</label>
                @foreach (string s in Model.Steps)
                {
                    <input asp-for="@s" class="form-control" />
                }
            </div>

            <div class="form-group">
                <label class="control-label">Ingredients</label>
                @foreach (string il in Model.ImageLocations)
                {
                    <input asp-for="@il" class="form-control" />
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

