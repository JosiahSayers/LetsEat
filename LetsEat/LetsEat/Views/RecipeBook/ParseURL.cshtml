@using LetsEat.Models.Forms

@model ParseURLForm
@{
    ViewData["Title"] = "ParseURL";
}

<h2>Import a recipe from another site</h2>

<form asp-action="ParseURL" class="col-lg-4">
    <div class="form-group">
        <label asp-for="URL"></label>
        <input class="form-control" asp-for="URL" placeholder="Paste a link" />
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Submit" />
    </div>
</form>