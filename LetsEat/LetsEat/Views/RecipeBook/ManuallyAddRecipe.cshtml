@using LetsEat.Models.Forms

@model AddRecipeForm
@{
    ViewData["Title"] = "Add A Recipe";
}

<h2>Add a new recipe</h2>

<div id="spinner">
    <img src="~/img/spinner.gif" />
</div>

<form class="col-sm-9">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="Name" placeholder="Something delicious...">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <textarea class="form-control" rows="3" id="description" placeholder="It smells like heaven..."></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Source" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="Source" placeholder="Where did you find this recipe?">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PrepMinutes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="PrepMinutes" placeholder="ex. 15" min="1" max="999">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CookMinutes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="CookMinutes" placeholder="ex. 45" min="1" max="999">
        </div>
    </div>

    <div class="form-group row" id="ingredients">
        <label id="ing-id" asp-for="Ingredients" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <div class="form-group ingredient-group">
                <input type="text" class="form-control ingredient" placeholder="1 cup of milk">
            </div>
        </div>
    </div>
    <div id="addIngredient" class="btn btn-light btn-block col-sm-9">Add Another Ingredient</div>

    <div class="form-group row" id="steps">
        <label class="col-sm-2 col-form-label" id="step-id">Steps</label>
        <div class="col-sm-7">
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">1.</div>
                </div>
                <input type="text" class="form-control step" id="inlineFormInputGroup" placeholder="Preheat the oven to 350 degrees">
            </div>
        </div>
    </div>
    <div id="addStep" class="btn btn-light btn-block col-sm-9">Add Another Step</div>

    <div class="form-group-row">
        <label class="col-sm-2 col-form-label">Upload an image</label>
        <div class="custom-file col-sm-7">
            <input type="file" class="custom-file-input" id="Image-Upload">
            <label class="custom-file-label" for="Image-Upload">Choose file</label>
        </div>
    </div>

    <br />

    <input type="hidden" id="UserWhoAdded" asp-for="UserIdWhoAdded" />
    <button id="submit" class="btn btn-primary">Add Recipe!</button>
</form>

<script src="~/js/RecipeBook/ManuallyAddRecipe.js"></script>
<link href="~/svg/open-iconic-bootstrap.min.css" rel="stylesheet" />
<link href="~/css/ManuallyAddRecipe.css" rel="stylesheet" />