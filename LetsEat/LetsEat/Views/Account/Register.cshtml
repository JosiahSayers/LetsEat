@using LetsEat.Models.Account;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form class="col-sm-9" asp-controller="account" asp-action="register" method="post">
    <div class="form-group row">
        <label asp-for="DisplayName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="text" asp-for="DisplayName" />
            <span asp-validation-for="DisplayName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmEmail" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="email" asp-for="ConfirmEmail" />
            <span asp-validation-for="ConfirmEmail"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <input type="submit" value="Register" class="btn btn-primary" />

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}