@using LetsEat.Models.Account;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form class="col-sm-9" asp-controller="account" asp-action="login" method="post">

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-7">
            <input class="form-control" type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <input class="btn btn-primary" type="submit" value="Login" />
</form>


