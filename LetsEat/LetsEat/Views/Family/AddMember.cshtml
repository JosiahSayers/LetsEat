@model AddFamilyMemberForm
@{
    ViewData["Title"] = "Add Family Member";
}

<h1>Add Family Member</h1>

<form class="col-xl-4 search-form">
    <div class="form-group">
        <label asp-for="SearchEmail"></label>
        <input class="form-control" asp-for="SearchEmail" placeholder="address@@email.com" />
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" />
    </div>
    <input type="hidden" value="@Model.CurrentUser.FamilyId" id="family-id" />
    <input type="hidden" value="@Model.CurrentUser.Id" id="invited-by-id" />
</form>


<hr />

<div class="search-results">

</div>

<script src="~/js/Family/AddMember.js"></script>