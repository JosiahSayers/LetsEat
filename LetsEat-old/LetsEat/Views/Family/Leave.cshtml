@model User

@{
    ViewData["Title"] = "Leave";
}
<h1>Are you sure you want to leave the family?</h1>

<p>All of the recipes that you added will remain on your account but they will be removed from this family's recipe book.</p>

<form asp-action="leave" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Yes, leave family" class="btn btn-danger" />
</form>

<a asp-action="Index">Nevermind, I think I want to stay.</a>